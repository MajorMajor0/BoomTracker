<Window x:Class="BoomTracker.MainWindow"
		x:Name="Main_Window"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		Title="MainWindow"
		Width="500"
		Height="450"
		mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="130" />
		</Grid.RowDefinitions>

		<Image x:Name="MainImage" />

		<StackPanel Orientation="Horizontal"
					Grid.Row="1"
					Margin="5,5,5,10">
			<StackPanel Width="150"
						VerticalAlignment="Bottom">
				<TextBlock Text="Select video source" />
				<ComboBox x:Name="ImageSourceComboBox"
						  DisplayMemberPath="Name"
						  ItemsSource="{Binding VideoDevices}"
						  SelectedItem="{Binding CurrentDevice}" />
				<StackPanel Orientation="Horizontal"
				Margin="0,15,0,0">
					<TextBox Width="30"
							 Margin="2"
							 Text="{Binding ElementName=Main_Window, Path=DataContext.RectX}" />
					<TextBox Width="30"
							 Margin="2"
							 Text="{Binding ElementName=Main_Window, Path=DataContext.RectY}" />
					<TextBox Width="30"
							 Margin="2"
							 Text="{Binding ElementName=Main_Window, Path=DataContext.RectWidth}" />
					<TextBox Width="30"
							 Margin="2"
							 Text="{Binding ElementName=Main_Window, Path=DataContext.RectHeight}" />
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<TextBlock Width="30"
							 Margin="2"
							 Text="X" 
							 TextAlignment="Center"/>
					<TextBlock Width="30"
							 Margin="2"
							 Text="Y" 
							 TextAlignment="Center"/>
					<TextBlock Width="30"
							 Margin="2"
							 TextAlignment="Center"
							 Text="W" />
					<TextBlock Width="30"
							 Margin="2"
							 TextAlignment="Center"
							 Text="H" />
				</StackPanel>

				<StackPanel Orientation="Horizontal"
				>
					<TextBox Width="30"
							 Margin="2"
							 Text="{Binding ElementName=Main_Window, Path=DataContext.Rect2X}" />
					<TextBox Width="30"
							 Margin="2"
							 Text="{Binding ElementName=Main_Window, Path=DataContext.Rect2Y}" />
					<TextBox Width="30"
							 Margin="2"
							 Text="{Binding ElementName=Main_Window, Path=DataContext.Rect2Width}" />
					<TextBox Width="30"
							 Margin="2"
							 Text="{Binding ElementName=Main_Window, Path=DataContext.Rect2Height}" />
				</StackPanel>
			</StackPanel>

			<Button Width="
							 70"
					Height="
							 20"
					Margin="15,0,0,0"
					Click="StartButton_Click"
					Content="Start"
					VerticalAlignment="Bottom" />

			<Button Width="70"
					Height="20"
					Margin="15,0,0,0"
					Click="StopButton_Click"
					Content="Stop"
					VerticalAlignment="Bottom" />

			<Button Width="70"
					Height="20"
					Margin="15,0,0,0"
					Click="ImageButton_Click"
					Content="Image"
					VerticalAlignment="Bottom" />
		</StackPanel>



	</Grid>
</Window>
